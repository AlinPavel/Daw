
@{
    ViewBag.Title = "New";
}

<h2>Adauga categorie</h2>

@using (Html.BeginForm(actionName: "New", controllerName: "Categories"))
{
    @Html.Label("Name", "Nume categorie")
    <br />
    @Html.TextBox("Name", null, new { @class = "form-control" })
    @Html.ValidationMessage("Name", null, new { @class = "text-danger" })
    <br />
    <button class="btn btn-success" type="submit">Adauga</button>
}



@{
    ViewBag.Title = "Edit";
}

<h2>Editare review</h2>
<form method="post" action="/Reviews/Edit/@ViewBag.Review.ReviewId">
    @Html.HttpMethodOverride(HttpVerbs.Put)
    @Html.Label("Content", "Editeaza continut review")
    <br />
    <textarea name="Content">@ViewBag.Review.Content</textarea>
    <br />
    <button class="btn btn-success" type="submit">Editeaza review</button>
</form>


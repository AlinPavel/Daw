
@{
    ViewBag.Title = "New";
}
<style>
    .title {
        font-family: Georgia, serif;
        text-align: center;
    }
    .button {
        background: #3985e0;
        background: -webkit-linear-gradient(left,#4a60c1 10%,#3985e0);
        background: linear-gradient(to right,#4a60c1 10%,#3985e0);
        color: aliceblue;
        border-width: 0;
        padding-top: 8px;
        padding-bottom: 8px;
        display: flex;
        justify-content: rig;
    }

</style>
<h1>@ViewBag.Message</h1>
<br />
<button class="btn btn-primary" style="background-color: #5680E9" onclick="window.location.href='/Products/Index'">Inapoi la produse</button>
<br />
<h2 class="title">Adaugare produs</h2>
@using (Html.BeginForm(actionName: "New", controllerName: "Products"))
{
    @Html.Hidden("UserId")

    @Html.Label("Name", "Nume produs")
    <br />
    @Html.TextBox("Name", null, new { @class = "form-control" })
    @Html.ValidationMessage("Name", "", new { @class = "text-danger" })
    <br />
    <br />
    @Html.Label("Description", "Descriere produs")
    <br />
    @Html.TextArea("Description", null, new { @class = "form-control" })
    @Html.ValidationMessage("Description", "", new { @class = "text-danger" })
    <br />
    <br />
    @Html.Label("Price", "Pret produs")
    <br />
    @Html.TextArea("Price", null, new { @class = "form-control" })
    @Html.ValidationMessage("Price", "", new { @class = "text-danger" })
    <br />
    <br />
    @Html.Label("SelectedCategories", "Selectati categoriile")
    @Html.ListBox("SelectedCategories", new MultiSelectList(Model.Cat, "Value", "Text"), new { @class = "form-control" })
    @Html.ValidationMessage("SelectedCategories", null, new { @class = "text-danger" })
    <br />
    <br />
    <button class="button" type="submit">Adauga produs</button>
}
